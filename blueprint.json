{
  "$schema": "https://playground.wordpress.net/blueprint-schema.json",
  "landingPage": "/wp-admin/admin.php?page=wc-admin&path=%2Fwoodev-starter-tool",
  "preferredVersions": {
    "php": "8.2",
    "wp": "latest"
  },
  "features": {
    "networking": true
  },
  "steps": [
    {
      "step": "installPlugin",
      "pluginData": {
        "resource": "wordpress.org/plugins",
        "slug": "woocommerce"
      },
      "options": {
        "activate": true
      }
    },
    {
      "step": "installPlugin",
      "pluginData": {
        "resource": "url",
        "url": "https://github-proxy.com/proxy/?repo=bacoords/woodev-extension-starter"
      }
    },
    {
      "step": "writeFile",
      "path": "/wordpress/wp-content/mu-plugins/rewrite.php",
      "data": "<?php /* Use pretty permalinks */ add_action( 'after_setup_theme', function() { global $wp_rewrite; $wp_rewrite->set_permalink_structure('/%postname%/'); $wp_rewrite->flush_rules(); } );"
    },
    {
      "step": "setSiteOptions",
      "options": {
        "blogname": "WooCommerce",
        "woocommerce_store_city": "Los Angeles",
        "woocommerce_store_address": "123 Main St",
        "woocommerce_store_postcode": "90038",
        "woocommerce_default_country": "United States",
        "woocommerce_onboarding_profile": {
          "skipped": true
        },
        "woocommerce_currency": "USD",
        "woocommerce_weight_unit": "lbs",
        "woocommerce_dimension_unit": "in",
        "woocommerce_allow_tracking": "no",
        "woocommerce_cheque_settings": {
          "enabled": "yes"
        },
        "woocommerce_coming_soon": "no"
      }
    },
    {
      "step": "login",
      "username": "admin"
    }
  ]
}
